<div class="home-banner">
  <h1>mixmaker</h1>
</div>

<div class="container">
  <div class="row justify-content-center">


<h1>Discover incredible cocktails all around the world</h1>

<div class="row">

  <% @cocktails.each do |cocktail| %>
   <div class="col-sm">
      <div class="card" style="width: 18rem;">
        <img src="https://source.unsplash.com/1600x900/?cocktail" class="card-img-top" alt="...">
          <div class="card-body">
          <h5 class="card-title"> <%= cocktail.name %> </h5>
          <p class="card-text"><td>  <%= link_to "Voir", cocktail_path(cocktail) %> </td></p>
          </div>
      </div>
  </div>
  <% end %>
</div>

Add a cocktail :
<button type="button" class="btn btn-success"><%= link_to new_cocktail_path do %>
                                                  <i class="fas fa-plus"></i>
                                                    <% end %>
                                                  </button>
  </div>
</div>


